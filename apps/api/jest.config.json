{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "moduleNameMapper": {
    "^@/core(.*)$": "<rootDir>/core$1",
    "^@/modules(.*)$": "<rootDir>/modules$1",
    "^@/types(.*)$": "<rootDir>/types$1",
    "^@/utils(.*)$": "<rootDir>/utils$1"
  },
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}
