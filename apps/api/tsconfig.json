{
  "extends": "../../tsconfig.base.node.json",
  // "include": ["src", "seeds", "config", "test"],
  // "include": ["src", "config"],
  "compilerOptions": {
    "outDir": "./build",
    // "baseUrl": "./src",
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "paths": {
      // "@/core/*": ["core/*"],
      // "@/modules/*": ["modules/*"],
      // "@/types/*": ["types/*"],
      // "@/utils/*": ["utils/*"]
      "@/core/*": ["./src/core/*"],
      "@/modules/*": ["./src/modules/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"]
    }
  },
  "references": [
    {
      "path": "../../packages/domains/tsconfig.json"
    },
    {
      "path": "../../packages/mocks/tsconfig.json"
    },
    {
      "path": "../../packages/utils/tsconfig.json"
    }
  ]
}
