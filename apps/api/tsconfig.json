{
  "extends": "../../tsconfig.base.node.json",
  "include": ["src"],
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "paths": {
      "@core/*": ["core/*"],
      "@modules/*": ["modules/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "references": [
    {
      "path": "../../packages/domains/tsconfig.json"
    },
    {
      "path": "../../packages/mocks/tsconfig.json"
    },
    {
      "path": "../../packages/utils/tsconfig.json"
    }
  ]
}
