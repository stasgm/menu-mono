// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "prisma-nestjs-graphql"
  output   = "../src/types/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement())
  phoneNumber String  @unique
  name        String
  Order       Order[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

model Product {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  categories Category[]
  lines      MenuLine[]
  OrderLine  OrderLine[]
}

model MenuLine {
  id        Int     @id @default(autoincrement())
  Product   Product @relation(fields: [productId], references: [id])
  productId Int
  price     Int
  Menu      Menu[]
}

model Menu {
  id    Int        @id @default(autoincrement())
  name  String     @unique
  lines MenuLine[]
}

model OrderLine {
  id          Int     @id @default(autoincrement())
  orderId     Int?
  productId   Int
  price       Int
  quantity    Int
  totalAmount Int
  Product     Product @relation(fields: [productId], references: [id])
  Order       Order?  @relation(fields: [orderId], references: [id])
}

model Order {
  id     Int         @id @default(autoincrement())
  date   DateTime
  number String
  User   User        @relation(fields: [userId], references: [id])
  userId Int
  lines  OrderLine[]
  totalAmount Int
  totalProductQuantity Int
  status String
}
