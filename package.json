{
  "name": "menu-mono",
  "version": "0.0.1",
  "description": "Simple monorepo for testing new techstack",
  "license": "MIT",
  "author": "Stanislau Shliakhtsich",
  "scripts": {
    "all:format": "turbo run format",
    "all:format-packagejson": "prettier-package-json --write './package.json' './**/*/package.json'",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,cjs,mjs}'",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "test": "turbo run test",
    "web:build": "turbo run build --filter=web",
    "web:dev": "turbo run dev --filter=web"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "prettier-package-json": "^2.8.0",
    "turbo": "^1.10.7"
  },
  "keywords": [
    "nestjs",
    "nextjs",
    "pnpm",
    "react",
    "turbo"
  ],
  "engines": {
    "node": ">=16.8.0",
    "npm": "please-use-pnpm",
    "pnpm": ">=8.*",
    "yarn": "please-use-pnpm"
  }
}